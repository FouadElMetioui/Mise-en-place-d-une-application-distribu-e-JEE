<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchemainstance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/
persistence/persistence_2_0.xsd">
	<persistence-unit name="Etudiant"
		transaction-type="JTA">
		<jta-data-source>java:/dsTest</jta-data-source>
		<class>ma.fstt.entities.Etudiant</class>
		<properties>
			<property name="hibernate.dialect"
				value="org.hibernate.dialect.MySQL5Dialect" />
			<property name="hibernate.hbm2ddl.auto" value="drop-and-create" />
		</properties>
	</persistence-unit>
</persistence>